<Window x:Name="mainWindow" x:Class="RushHour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="657.836" Width="525" KeyDown="mainWindow_KeyDown">

    <Grid x:Name="mainGrid">
        <Grid x:Name="gameGrid" Height="500" Width="500" ShowGridLines="True" VerticalAlignment="Bottom"></Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="102" Stroke="Black" VerticalAlignment="Top" Width="517"/>
        <Button x:Name="solutionMoveButton" Content="Next Solution Move" HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" Margin="386,64,0,0" Click="solutionMoveButton_Click"/>
        <Button x:Name="configButton" Content="Set Config" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,64,0,0" Click="configButton_Click"/>
        <TextBox x:Name="configEntryBox" HorizontalAlignment="Left" Height="20" Margin="100,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="29" ToolTip="Configuration number (negative for random)"/>
    </Grid>

</Window>
